<% provide(:button_text, "Save changes") %>

<h1>Update city</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <%= form_for(@city) do |f| %>
          <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control' %>

          <%= f.label :photo %>
          <%= f.text_field :photo, class: 'form-control' %>

          <%= f.submit yield(:button_text), class: "btn btn-primary" %>
    <% end %>

  </div>
</div>
