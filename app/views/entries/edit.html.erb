<% provide(:button_text, "Save changes") %>

<h1>Update entry</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <%= form_for(@entry) do |f| %>
          <%= f.label :title %>
          <%= f.text_field :title, class: 'form-control' %>

          <%= f.label :body %>
          <%= f.text_area :body, class: 'form-control' %>

          <%= f.submit yield(:button_text), class: "btn btn-primary" %>
    <% end %>

  </div>
</div>
