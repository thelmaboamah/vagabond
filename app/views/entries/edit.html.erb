<% provide(:button_text, "Save changes") %>

<h2 class="text-center">Update entry</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">

		<%= form_for @entry, url: entry_update_path, method: :patch, html: { multipart: true } do |f| %>

      <%= f.hidden_field :user_id %>

			<%= f.label :city_id %>
			<%= f.collection_select :city_id, City.order(:name),:id,:name, {include_blank: true}, {class: 'form-control'} %>

      <%= f.label :image %>
      <%= f.file_field :image, class: 'form-control' %>

      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>

      <%= f.label :body %>
      <%= f.text_area :body, class: 'form-control' %>

      <%= f.submit yield(:button_text), class: "btn btn-primary" %>

		<% end %>

  </div>
</div>
