<%= form_for @entry, html: { multipart: true } do |f| %>

      <%= f.hidden_field :user_id %>

			<%= f.label :city_id %>
			<%= f.collection_select :city_id, City.order(:name),:id,:name %>

      <%= f.label :image %>
      <%= f.file_field :image, class: 'form-control' %>

      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>

      <%= f.label :body %>
      <%= f.text_area :body, class: 'form-control' %><br>

      <%= f.submit yield(:button_text), class: "btn btn-default" %>
<% end %>
