<%= form_for @entry, html: { multipart: true } do |f| %>
      <%= f.label :image %>
      <%= f.file_field :image, class: 'form-control' %>

      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>

      <%= f.label :body %>
      <%= f.text_area :body, class: 'form-control' %>

      <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>
